<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:animateLayoutChanges="true">

        <Button
            android:id="@+id/channel1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/channel1_button_text"
            android:drawableEnd="@drawable/ic_play"
            android:drawablePadding="@dimen/default_margin"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/channel2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:drawableEnd="@drawable/ic_play"
            android:drawablePadding="@dimen/default_margin"
            android:text="@string/channel2_button_text"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/output_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/output_image"
            android:layout_width="wrap_content"
            android:layout_height="224dp"
            android:layout_marginTop="@dimen/default_margin"
            android:visibility="gone"
            android:contentDescription="@string/image_channel" />

    </LinearLayout>

    <TextView
        android:id="@+id/clear_all_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_text"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/default_margin" />

</FrameLayout>